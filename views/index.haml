!!! 5
%html
  %head
    %title Spellher
    %link{href: "http://code.jquery.com/mobile/1.0a3/jquery.mobile-1.0a3.min.css", rel: "stylesheet"}
    %link{:href=>"/stylesheets/global.css", :media=>"screen", :rel=>"stylesheet", :type=>"text/css"}
    %script(src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js")
    %script{src: "http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js", type: "text/javascript"}
    %script{src: "/js/app.js", type: "text/javascript"}
  %body
    %div{"data-role" => "page"}
      %div{"data-role" => "header"}
        %h1 Spellher
      / /header
      %div{"data-role" => "content"}
        %p Validate your spelling?
        %form{ action: "", method: "post" }
          %label{ for: "word"} Word:
          %input{ type: "text", name: "word", class: "input", id: "js-word", placeholder: "Word"}
          %button#js-button Check
        .correct-word.js-correct
          .success.js-success
        .suggested-words.js-suggested-words
      / /content
      %div{"data-role" => "footer"}
        %h4 &copy; 2013 Rushaine McBean
      / /footer
    / /page