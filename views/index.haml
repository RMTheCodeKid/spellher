!!! 5
%html
  %head
    %title= "Spellher"
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0, user-scalable=yes"}
    %meta{ 'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %link{:href=>"/stylesheets/main.css", :media=>"screen", :rel=>"stylesheet", :type=>"text/css"}
    %link{:href=>"/stylesheets/global.css", :media=>"screen", :rel=>"stylesheet", :type=>"text/css"}
    %script(src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js")
    %script(src="/js/underscore-1.5.1.js")
    %script(src="/js/app.js")
  %body
    .header-container
      .wrapper.clearfix
        %h1.title Spellher
        %nav
          %ul
            %li
            %a{ href: "#", title: "About"}About
    .main-container
      .main.wrapper.clearfix
        Validate your spelling?
        %form{ action: "", method: "post" }
          %label{ for: "word"} Word:
          %input{ type: "text", name: "word", class: "input", id: "js-word", placeholder: "Word"}
          %button#js-button Check
      .correct-word.js-correct
        .success.js-success
      .suggested-words.js-suggested-words
    .footer-container
      %footer.wrapper
        %p &copy; 2013 Rushaine McBean
